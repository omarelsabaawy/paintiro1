<!doctype html>
<html>
<head>

  <title>Paintiro- Contact Us</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
	<!--  bootstrap links-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	
  <link rel="stylesheet" href="css/general/general.css">
  <link rel="stylesheet" href="css/components/header2.css">
  <link rel="stylesheet" href="css/components/footer.css">
  <link rel="stylesheet" href="../css/pages/contact.css">
  

</head>

<body>
  <div>
  <div>
  <%- include('../includes/header2'); %>

  <div class=" margin-top-20 margin-bottom-30px">
    <div class="container">
    <form method="post" action="../contactus">
      
      <div class="col-md-2 hidden-sm hidden-xs"></div>
      <div class="col-md-8 col-xs-12">
        <div class="row margin-top-20">
          <div class="col-xs-6">First Name *</div>
          <div class="col-xs-6">Last Name *</div>
        </div>
        <div class="row ">
          <div class="col-xs-6"><input type="text" name="firstName" required class="textField"></div>
          <div class="col-xs-6"><input type="text" name="lastName" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Email Address *</div>
          <div class="col-xs-12"><input type="email" name="email" required class="textField"> </div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Phone Number *</div>
          <div class="col-xs-12"><input type="number" name="phoneNumber" required class="textField"> </div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Subject *</div>
          <div class="col-xs-12"><input type="text" name="subject" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Message *</div>
          <div class="col-xs-12"><textarea name="message" required class="textField" rows="5" style="resize: vertical;"></textarea></div>
        </div>

        <div class="row margin-top-20">
          <div class="col-xs-4"></div>
          <div class="col-xs-4"><input type="submit" name="" class="blackButton" value="SUBMIT"></div>
          <div class="col-xs-4"></div>
        </div>
        </form>
        
      </div>
      <div class="col-md-2 hidden-sm hidden-xs"></div>

   
  </div>

  </div>



  <%- include('../includes/footer'); %>
</div>
</script>

</body>
</html>
