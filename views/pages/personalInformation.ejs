<!doctype html>
<html>
<head>

  <title>Paintiro-Information</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
	<!--  bootstrap links-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	
  <link rel="stylesheet" href="css/general/general.css">
  <link rel="stylesheet" href="css/components/header2.css">
  <link rel="stylesheet" href="css/components/footer.css">
  <link rel="stylesheet" href="../css/pages/personalInformation.css">

</head>

<body>
  <div>
  <div>
  <%- include('../includes/header2'); %>

  <div class=" margin-top-20 margin-bottom-30px">
    <div class="container">
    <form action="../payment" method="post">
      
      <div class="col-md-2 hidden-sm hidden-xs"></div>
      <div class="col-md-8 col-xs-12">
 
        <div class="row h1 paintiroFont margin-bottom-30px  margin-top-60px"> PERSONAL INFORMATION</div>
        <div class="row margin-top-20">
          <div class="col-xs-6">First Name *</div>
          <div class="col-xs-6">Last Name *</div>
        </div>
        <div class="row ">
          <div class="col-xs-6"><input type="text" name="firstName" required class="textField"></div>
          <div class="col-xs-6"><input type="text" name="lastName" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Email Address *</div>
          <div class="col-xs-12"><input type="email" name="email" required class="textField"> </div>
          <p class="grayColor padding-left-20px">You'll receive notifications at this email address.</p>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Phone Number *</div>
          <div class="col-xs-12"><input type="tel" name="phoneNumber" required class="textField" > </div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">City *</div>
          <div class="col-xs-12"><input  type="text" name="city" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Street *</div>
          <div class="col-xs-12"><input type="text" name="street" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Building Number *</div>
          <div class="col-xs-12"><input type="number" name="BuildingNumber" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Floor Number *</div>
          <div class="col-xs-12"><input type="number" name="floorNumber" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Apartment Number *</div>
          <div class="col-xs-12"><input type="number" name="apartmentNumber" required class="textField"></div>
        </div>
        <div class="row margin-top-20">
          <div class="col-xs-12">Address  *</div>
          <div class="col-xs-12"><textarea name="address" required class="textField" rows="5" style="resize: vertical;"></textarea></div>
        </div>
<div class="flex-container-end margin-top-10px">
  <div class="col-xs-12"><input type="submit"  class="blackButton" value="Next"></div>
</div>
        
      </div>
      <div class="col-md-2 hidden-sm hidden-xs"></div>

    </form>  
  </div>

  </div>
  </div>

  <%- include('../includes/footer'); %>
</div>

</body>
</html>
